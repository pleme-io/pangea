module Pangea
  module Resources
    module AWS
      # AWS IoT Certificate type definitions
      class IotCertificateAttributes < Dry::Struct
        attr_reader active: bool
        attr_reader csr: String?
        attr_reader certificate_pem: String?
        attr_reader ca_certificate_pem: String?
        attr_reader tags: Hash[Symbol, String]

        def self.new: (Hash[Symbol, untyped] attributes) -> IotCertificateAttributes

        def creation_method: () -> Symbol
        def using_custom_certificate?: () -> bool
        def using_ca_certificate?: () -> bool
        def certificate_status: () -> String
        def certificate_arn_pattern: (String region, String account_id, String certificate_id) -> String
        def security_assessment: () -> Hash[Symbol, untyped]
        def recommended_policies: () -> Array[String]
        def lifecycle_recommendations: () -> Array[String]
        def compliance_info: () -> Hash[Symbol, untyped]
        def operational_metrics: () -> Hash[Symbol, untyped]
        def integration_requirements: () -> Array[String]
      end

      # AWS IoT Certificate resource function
      def aws_iot_certificate: (Symbol name, Hash[Symbol, untyped] attributes) -> ResourceReference
    end
  end
end
module Pangea
  module Resources
    module AWS
      module AuditManager
        class Assessment < Pangea::Resources::Base
          class Attributes < BaseAttributes
            attr_reader name: String
            attr_reader description: String
            attr_reader framework_id: String
            attr_reader roles: Array[Hash[Symbol, String]]
            attr_reader scope: Hash[Symbol, untyped]
            attr_reader assessment_reports_destination: Hash[Symbol, String]?
            attr_reader status: String?
            attr_reader tags: Hash[String, String]
            attr_reader depends_on: Array[String]?
          end

          class AssessmentReference < Reference
            def arn: () -> String
            def id: () -> String
            def status: () -> String
            def creation_time: () -> String
            def last_updated: () -> String
            def compliance_type: () -> String
          end

          def reference_class: () -> singleton(AssessmentReference)
        end
      end

      # Type-safe function for creating Audit Manager assessments
      def aws_auditmanager_assessment: (Symbol name, ?Hash[Symbol, untyped] attributes) -> AuditManager::Assessment::AssessmentReference
    end
  end
end
# RBS type definitions for AWS Cognito User Group

module Pangea
  module Resources
    module AWS
      # Cognito User Group attributes
      type cognito_user_group_attributes = {
        name: String,
        user_pool_id: String,
        description?: String?,
        precedence?: Integer?,
        role_arn?: String?
      }

      # Cognito User Group computed properties
      type cognito_user_group_computed_properties = {
        has_role: bool,
        has_precedence: bool,
        group_type: (:privileged | :role_based | :priority_based | :basic)
      }

      # AWS Cognito User Group resource function
      def aws_cognito_user_group: (Symbol name, cognito_user_group_attributes attributes) -> ResourceReference

      # Pre-configured user group templates
      module UserGroupTemplates
        def self.admin_group: (String user_pool_id, String admin_role_arn) -> Hash[Symbol, untyped]
        def self.manager_group: (String user_pool_id, String manager_role_arn) -> Hash[Symbol, untyped]
        def self.user_group: (String user_pool_id, ?String? user_role_arn) -> Hash[Symbol, untyped]
        def self.guest_group: (String user_pool_id) -> Hash[Symbol, untyped]
      end
    end
  end
end